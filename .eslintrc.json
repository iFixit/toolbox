{
   "parser": "babel-eslint",
   "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
         "jsx": true,
         "modules": true,
         "experimentalObjectRestSpread": true
      }
   },
   "extends": [
      "airbnb",
      "prettier",
      "prettier/react"
   ],
   "plugins": [
      "prettier"
   ],
   "rules": {
      "no-use-before-define": [
         "error",
         {
            "functions": false
         }
      ],
      "prettier/prettier": [
         "error",
         {
            "tabWidth": 3,
            "singleQuote": true,
            "trailingComma": "all"
         }
      ],
      "react/no-did-update-set-state": "off",
      "react/no-unused-prop-types": "warn",
      "react/prop-types": [
         "error",
         {
            "ignore": [
               "domProps"
            ]
         }
      ],
      "react/sort-prop-types": [
         "error",
         {
            "callbacksLast": true,
            "ignoreCase": true,
            "requiredFirst": true
         }
      ]
   }
}
