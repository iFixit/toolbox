{
   "parser": "babel-eslint",
   "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
           "jsx": true,
           "modules": true,
           "experimentalObjectRestSpread": true
      }
   },
   "extends": "airbnb",
   "rules": {
      "arrow-parens": ["error", "as-needed"],
      "max-len": "off",
      "indent": ["error", 3],
      "react/jsx-indent": ["error", 3],
      "react/jsx-indent-props": ["error", 3],
      "react/jsx-wrap-multilines": [
         "error",
         { "declaration": false, "assignment": false, "arrow": false }
      ],
      "react/no-unused-prop-types": "warn",
      "react/prop-types": ["error",
         { "ignore": ["domProps"] }
      ],
      "react/sort-prop-types": [
         "error",
         {
            "callbacksLast": true,
            "ignoreCase": true,
            "requiredFirst": true
         }
      ]
   }
}
